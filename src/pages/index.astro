---
// src/pages/index.astro
// Importa tus imágenes para el slider (asegúrate de que estén optimizadas)
import img1 from "../assets/RENDERS/CASA FENIX/DESPEGADA_01.jpg";
import img2 from "../assets/RENDERS/CASA LA DESPEGADA (ALEMANES)/LV-EXTERIOR-01.jpg";
import img3 from "../assets/RENDERS/CASA_OHANA/cam08_final.jpg";
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aire de Mar - Boutique Studio</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            overflow: hidden; /* Para que el slider ocupe toda la pantalla */
            font-family: sans-serif;
            background-color: #fff;
            color: #000;
        }
        .slider-container {
            position: relative;
            width: 100vw;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }
        .slide {
            position: absolute;
            width: 100%;
            height: 100%;
            background-size: cover;
            background-position: center;
            opacity: 0;
            transition: opacity 2s ease-in-out;
        }
        .slide.active {
            opacity: 1;
        }
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.3); /* Oscurece un poco la imagen */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
            padding: 2rem;
            box-sizing: border-box;
            z-index: 10;
        }
        .logo {
            font-size: 1.8rem;
            font-weight: bold;
            letter-spacing: 0.1em;
            text-transform: uppercase;
            margin-top: 1rem;
        }
        .boutique-studio {
            font-size: 0.8rem;
            letter-spacing: 0.2em;
            opacity: 0.7;
            margin-top: -0.5rem;
        }
        .enter-button {
            background-color: transparent;
            border: 2px solid white;
            color: white;
            padding: 0.8rem 2rem;
            text-decoration: none;
            font-size: 1.1rem;
            letter-spacing: 0.1em;
            transition: background-color 0.3s ease, color 0.3s ease;
            cursor: pointer;
        }
        .enter-button:hover {
            background-color: white;
            color: black;
        }
        .scroll-arrow {
            position: absolute;
            bottom: 2rem;
            font-size: 2rem;
            animation: bounce 2s infinite;
            cursor: pointer;
            z-index: 10;
        }
        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% {
                transform: translateY(0);
            }
            40% {
                transform: translateY(-10px);
            }
            60% {
                transform: translateY(-5px);
            }
        }
    </style>
</head>
<body>
    <div class="slider-container">
        <div class="slide active" style={`background-image: url(${img1.src});`}></div>
        <div class="slide" style={`background-image: url(${img2.src});`}></div>
        <div class="slide" style={`background-image: url(${img3.src});`}></div>

        <div class="overlay">
            <div>
                <div class="logo">AIRE DE MAR</div>
                <div class="boutique-studio">BOUTIQUE STUDIO</div>
            </div>
            <a href="/proyectos" class="enter-button">ENTRAR →</a>
            <div class="scroll-arrow">↓</div>
        </div>
    </div>

    <script>
        const slides = document.querySelectorAll('.slide');
        let currentSlide = 0;

        function showSlide(index) {
            slides.forEach((slide, i) => {
                slide.classList.remove('active');
                if (i === index) {
                    slide.classList.add('active');
                }
            });
        }

        function nextSlide() {
            currentSlide = (currentSlide + 1) % slides.length;
            showSlide(currentSlide);
        }

        setInterval(nextSlide, 5000); // Cambia de slide cada 5 segundos

        // Opcional: para el click de la flecha si quieres que también avance
        document.querySelector('.scroll-arrow').addEventListener('click', nextSlide);
    </script>
</body>
</html>