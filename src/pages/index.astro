---
import { Image } from "astro:assets";
import positivoAireDeMarBlanco from "../assets/positivo_Aire-de-Mar_blanco.png";
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Aire de Mar - Boutique Studio</title>
        <style>
            body,
            html {
                margin: 0;
                padding: 0;
                height: 100%; /* Asegura que el html y body ocupen toda la altura */
                overflow: hidden; /* Evita scrolls no deseados */
                font-family: sans-serif;
                color: #fff; /* Color de texto blanco para contrastar con el gradiente */
            }
            .gradient-background {
                background: linear-gradient(
                    to bottom right,
                    #ffffff 0%,
                    #001f4c 100%
                ); /* Cambiado a diagonal de blanco a azul oscuro */
                width: 100vw;
                height: 100vh;
                display: flex;
                flex-direction: column;
                justify-content: center; /* Centra verticalmente */
                align-items: center; /* Centra horizontalmente */
                padding: 2rem;
                box-sizing: border-box;
            }

            .logo-container {
                display: flex;
                flex-direction: column;
                align-items: center;
                /* Eliminado margin-top para un centrado perfecto */
            }

            .main-logo {
                /* Si tu logo es una imagen, descomenta y ajusta */
                /* width: 150px; 
                height: auto; */
                font-size: 1.8rem;
                font-weight: bold;
                letter-spacing: 0.1em;
                text-transform: uppercase;
                margin-bottom: 0.5rem; /* Espacio entre el título y el subtítulo */
            }
            .boutique-studio {
                font-size: 0.8rem;
                letter-spacing: 0.2em;
                opacity: 0.7;
            }

            .enter-button {
                background-color: transparent;
                border: 2px solid white;
                color: white;
                padding: 0.8rem 2rem;
                text-decoration: none;
                font-size: 1.1rem;
                letter-spacing: 0.1em;
                transition:
                    background-color 0.3s ease,
                    color 0.3s ease;
                cursor: pointer;
            }
            .enter-button:hover {
                background-color: white;
                color: black;
            }
            .scroll-arrow {
                font-size: 2rem;
                animation: bounce 2s infinite;
                cursor: pointer;
                margin-bottom: 1rem; /* Margen inferior para la flecha */
            }
            @keyframes bounce {
                0%,
                20%,
                50%,
                80%,
                100% {
                    transform: translateY(0);
                }
                40% {
                    transform: translateY(-10px);
                }
                60% {
                    transform: translateY(-5px);
                }
            }
        </style>
    </head>
    <body>
        <div class="gradient-background">
            <div class="logo-container">
                <Image
                    src={positivoAireDeMarBlanco}
                    alt="Aire de Mar Logo"
                    width={500}
                    height={500}
                />
            </div>

            <a href="/home" class="enter-button">ENTRAR →</a>
        </div>
    </body>
</html>
