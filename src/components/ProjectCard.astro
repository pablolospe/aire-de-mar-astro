---
// src/components/ProjectCard.astro
const { project } = Astro.props;
---
<a href={`/proyectos/${project.slug}`} class="project-card">
    <img src={project.data.image} alt={project.data.title} />
    <div class="project-info">
        <h3>{project.data.title.toUpperCase()}</h3>
        <p class="project-location">{project.data.location}</p>
        <p class="project-year">{project.data.year}</p>
    </div>
</a>

<style>
    .project-card {
        display: block;
        text-decoration: none;
        color: inherit;
        transition: opacity 0.3s ease;
    }
    .project-card:hover {
        opacity: 0.8;
    }
    .project-card img {
        width: 100%;
        height: 250px; /* Ajusta la altura seg√∫n tus necesidades */
        object-fit: cover;
        display: block;
    }
    .project-info {
        padding-top: 0.8rem;
    }
    .project-info h3 {
        margin: 0;
        font-size: 1.1rem;
        font-weight: normal;
    }
    .project-info .project-location,
    .project-info .project-year {
        font-size: 0.9rem;
        color: #666;
        margin-top: 0.2rem;
    }
</style>